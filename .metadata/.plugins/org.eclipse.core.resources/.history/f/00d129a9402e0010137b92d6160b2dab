#ifndef STATE_MACHINE_H_
#define STATE_MACHINE_H_
#include <stdbool.h>
#include <stdint.h>
#include "stm32f4xx_hal.h"
#include "lcd_driver.h"


#define SECOND_PER_SYMBOL 2U
#define TIME_PER_SYMBOL (SECOND_PER_SYMBOL) * (1000U)

typedef enum {
	ARMED,
	ARMED_COUNTDOWN,
	ALERT_SMS,
	DISARMED,
	SET_NEW_PIN,
	MENAGE_NUMBER,
	ADD_NUMBER,
	REMOVE_NUMBER,
	SET_ALERT_TIME
} alarm_state;
extern alarm_state state;

void StateMachine_Init(alarm_state state, char str[14], uint8_t len, bool changed_inp);

void StateMachine_Run(alarm_state state, char str[14], uint8_t len, bool changed_inp);
void StateMachine_Run(char str[14], uint8_t len, bool changed_inp);


#endif
