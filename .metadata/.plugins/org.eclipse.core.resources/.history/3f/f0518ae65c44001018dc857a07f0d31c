#include "expander.h"
I2C_HandleTypeDef i2c_mcp;

void mcp_init (I2C_HandleTypeDef i2c){
	i2c_mcp = i2c;
}


void mcp_write_reg (uint8_t reg_addr, uint8_t mess){
	//HAL_I2C_Master_Transmit(&i2c_mcp, SLAVE_ADDRESS_MCP<<1 | 0, &mess, 1, HAL_MAX_DELAY);
	HAL_I2C_Mem_Write(i2c_mcp, SLAVE_ADDRESS_MCP, reg_addr, 1, &mess, 1, HAL_MAX_DELAY);
}
